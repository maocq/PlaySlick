# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /action                     controllers.HomeController.action
GET     /redirect                   controllers.HomeController.redirect
GET     /template                   controllers.HomeController.template
GET     /ws                         controllers.HomeController.wsApi

GET     /sockets                    controllers.HomeController.sockets
GET     /socket                     controllers.SocketController.socket(id: Option[String])


#Users
GET     /users                      controllers.UserController.all
GET     /users/:id                  controllers.UserController.get(id: Long)
POST    /users                      controllers.UserController.add
PUT     /users/:id                  controllers.UserController.edit(id: Long)
DELETE  /users/:id                  controllers.UserController.remove(id: Long)

#Json
GET     /json                       controllers.JsonController.index
GET     /json/class                 controllers.JsonController.classConstruction
GET     /json/obj                   controllers.JsonController.jsonObj
GET     /json/writes                controllers.JsonController.writes
GET     /json/writesCombinator      controllers.JsonController.writesCombinator
GET     /json/recorrer              controllers.JsonController.traversing
GET     /json/conversion            controllers.JsonController.converting
GET     /json/as                    controllers.JsonController.as
GET     /json/validar               controllers.JsonController.validation
GET     /json/jsModel               controllers.JsonController.jsValueToModel





# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
